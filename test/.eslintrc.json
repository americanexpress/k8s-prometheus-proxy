{
  "extends": [
    "amex",
    "plugin:mocha/recommended"
  ],
  "plugins": [
    "mocha"
  ],
  "rules": {
    // chai uses getters
    "no-unused-expressions": 0,
    // mocha does not want arrow functions
    "prefer-arrow-callback": 0,
    "func-names": 0,
    // _getData is a part of https://www.npmjs.com/package/node-mocks-http
    "no-underscore-dangle": ["error", { "allow": ["_getData"] }],
    // repeated imports when changing the environment
    "global-require": 0
  }
}
